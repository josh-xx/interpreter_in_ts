{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    },
    "types": [
        "jest"
    ],
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
